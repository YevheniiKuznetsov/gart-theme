.contacts {
  padding-bottom: 156px;

  .box-feedback {
    background: #ffffff;
    box-shadow: 0px 8px 48px rgba(153, 153, 153, 0.11);
    border-radius: 24px;
    padding: 40px 78px 40px 40px;

    .box-feedback__wrapper {
      display: flex;
      justify-content: space-between;
    }

    .box-feedback__social {
      max-width: 240px;
      width: 100%;
      margin-right: 40px;

      .box-feedback__social-title {
        font-weight: 800;
        font-size: 38px;
        line-height: 120%;
        letter-spacing: 0.01em;
        margin-bottom: 12px;
      }
    }

    .box-feedback__form {
      max-width: 842px;
      width: 100%;

      .box-feedback__form-title {
        font-weight: 600;
        font-size: 23px;
        line-height: 100%;
        margin-bottom: 16px;
      }
    }
  }

  .fund-box {
    margin-bottom: 16px;

    .fund-box__item + .fund-box__item {
      margin-top: 6px;
    }

    .fund-box__item {
      display: flex;
      width: 100%;

      .fund-box__item-icon {
        max-width: 24px;
        width: 100%;
        display: block;
        margin-right: 15px;
        object-fit: contain;
      }

      .fund-box__item-link {
        font-weight: 400;
        font-size: 15px;
        line-height: 150%;
      }
    }
  }

  .social {
    .social__title {
      font-weight: 400;
      font-size: 15px;
      line-height: 150%;
      margin-bottom: 8px;
    }

    .social__wrapper {
      display: flex;
      align-items: center;
      margin-right: 65px;

      .social__item {
        background: #0057b8;
        padding: 6px;
        border-radius: 35px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 30px;
        height: 30px;
        transition: all 0.3s;

        &:hover {
          background: #ffd700;
        }
      }

      .social__item + .social__item {
        margin-left: 16px;
      }

      .social__item-img {
        max-width: 20px;
        width: 100%;
        display: block;
      }
    }
  }
}

.box-feedback__form {
  .form, form {
    &__wrapper {
      display: flex;
      justify-content: space-between;
      margin-bottom: 24px;
    }

    .form__item {
      width: calc(50% - 40px);
    }

    .form__label {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;
      color: #495057;
      margin-bottom: 16px;
      display: block;
    }

    .form__textarea {
      max-width: 802px;
      width: 100%;
      border-radius: 20px;
      height: 182px;
    }

    .form__btn {
      margin-left: auto;

      margin-right: 0;
    }
  }
}

@media only screen and (max-width: 992px) {
  .contacts {
    padding-bottom: 56px;

    .box-feedback {
      padding: 24px;

      .box-feedback__wrapper {
        flex-direction: column;
      }

      .box-feedback__social {
        margin-right: 0;
        margin-bottom: 40px;
      }
    }
  }
}

@media only screen and (max-width: 568px) {
  .contacts {
    padding-bottom: 40px;

    .form, form {
      .form__wrapper {
        flex-direction: column;
      }

      .form__item {
        width: calc(100%);
      }

      .form__item + .form__item {
        margin-top: 16px;
      }

      .form__btn {
        margin-left: auto;
        margin-right: 0;
        max-width: 100%;
      }
    }

    .box-feedback {
      .box-feedback__social {
        .box-feedback__social-title {
          font-size: 21px;
          margin-bottom: 24px;
        }
      }

      .box-feedback__form {
        .box-feedback__form-title {
          font-size: 18px;
        }
      }
    }
  }
}
