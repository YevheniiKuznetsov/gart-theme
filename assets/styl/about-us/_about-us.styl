.content-about {
  padding: 40px 0 64px;

  &__inner {
    // transform: translateY(-300px);
    margin-top: -300px;
  }

  &__promo {
    position: relative;
    width: 70%;
    margin: 0 auto;

    &-picture {
      display: block;
      width: 100%;
      border-radius: 24px;
          z-index: 2;
    position: relative;
    }
  }

  &__title {
    text-align: center;
    font-weight: 700;
    font-size: 42px;
    line-height: 100%;
    color: #ffffff;
    margin-bottom: 20px;
  }

  &__desc {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    font-weight: 500;
    font-size: 16px;
    line-height: 150%;
    text-align: center;
    color: #ffffff;
    margin-bottom: 44px;
  }

  .box-can {
    width: 100%;
    max-width: 1160px;
    margin: 0 auto;
    padding: 40px 80px;
    background: #ffffff;
    border: 1px solid #f1f3f5;
    box-shadow: 0px 8px 48px rgba(153, 153, 153, 0.11);
    border-radius: 24px;

    &__title {
      font-weight: 700;
      font-size: 28px;
      line-height: 100%;
      text-transform: uppercase;
      color: #212529;
      text-align: center;
      margin-bottom: 20px;
    }

    &__desc {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;
      text-align: center;
      margin-bottom: 26px;
    }

    .box-line {
      display: flex;

      &__pictire {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        background: #0057b8;
        border-radius: 16px;
        margin-right: 24px;

        &-img {
          display: block;
          width: 100%;
          max-width: 35px;
        }
      }

      &__content {
        max-width: 90%;

        &-title {
          font-weight: 600;
          font-size: 23px;
          line-height: 100%;
          color: #0057b8;
          margin-bottom: 8px;
        }

        &-desc {
          font-weight: 500;
          font-size: 14px;
          line-height: 150%;

          a {
            color: #0057b8;
            font-weight: 500;
            font-size: 14px;
            line-height: 150%;
            text-decoration: underline;
          }

          span {
            display: block;
            margin-top: 8px;
            font-weight: 600;
            font-size: 17px;
            line-height: 140%;
            color: #0057b8;
          }
        }
      }
    }

    .box-order {
      display: flex;
      justify-content: space-between;
      margin: 25px 0;

      &__item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        max-width: 292px;
        padding: 14px 30px;
        background: #f8f9fa;
        border: 1px solid #0057b8;
        border-radius: 24px;

        &-title {
          font-weight: 600;
          font-size: 17px;
          line-height: 100%;
          color: #0057b8;
          margin-bottom: 38px;
          text-align: center;
        }

        &-picture {
          display: block;
          width: 100%;
          margin-bottom: 13px;
          border-radius: 16px;
        }

        &-btn {
          padding: 11px 20px 11px;
        }
      }
    }
  }

  .box-map {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 80px 0;

    &__picture {
      display: block;
      width: 100%;
      max-width: 600px;
      transform: translateX(-82px);
    }

    &__content {
      max-width: 600px;

      &-title {
        font-weight: 700;
        font-size: 28px;
        line-height: 125%;
        color: #212529;
        margin-bottom: 26px;
      }

      &-desc {
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;
        margin-bottom: 12px;
      }

      &-proverb {
        background: #f1f3f5;
        border-radius: 24px;
        padding: 10px;

        p {
          font-weight: 500;
          font-size: 14px;
          line-height: 150%;
          color: #495057;
        }

        p + p {
          margin-top: 12px;
        }
      }
    }
  }

  .box-priority {
    padding: 40px;
    background: #ffffff;
    border: 1px solid #f1f3f5;
    box-shadow: 0px 8px 68px rgba(136, 136, 136, 0.11);
    border-radius: 24px;

    hr {
      border-color: #f1f3f52b;
      margin: 45px 0;
    }

    .priority-today {
      &__title {
        text-align: center;
        font-weight: 600;
        font-size: 23px;
        line-height: 150%;
        text-transform: uppercase;
        color: #212529;
      }

      &__desc {
        text-align: center;
        font-weight: 500;
        font-size: 14px;
        line-height: 100%;
      }

      &__wrapper {
        margin-top: 36px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 32px 72px;
      }

      &__box {
        display: flex;
        width: 100%;
        max-width: 320px;
      }

      &__picture {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        background: #0057b8;
        box-shadow: 0px 6px 22px rgba(51, 51, 51, 0.06);
        border-radius: 16px;
        margin-right: 20px;

        &--yellow {
          background: #ffd700;
        }

        &-icon {
          display: block;
          max-width: 32px;
        }
      }

      &__content {
        max-width: 75%;

        &-title {
          font-weight: 700;
          font-size: 17px;
          line-height: 140%;
          text-transform: uppercase;
          margin-bottom: 4px;
        }

        &-desc {
          font-weight: 500;
          font-size: 14px;
          line-height: 150%;
        }
      }
    }
  }

  .box-principle {
    margin-top: 82px;
    background: #f8f9fa;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 24px;

    &__picture {
      display: block;
      width: 100%;
      margin-bottom: 40px;
    }

    &__content {
      text-align: center;
      padding: 0 42px 42px;

      &-title {
        font-weight: 700;
        font-size: 28px;
        line-height: 125%;
        color: #212529;
        margin-bottom: 8px;
      }

      &-text {
        font-weight: 600;
        font-size: 17px;
        line-height: 140%;
        color: #0057b8;
        margin-bottom: 20px;
      }

      &-desc {
        margin: 0 auto;
        max-width: 700px;
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;
      }
    }
  }

  .box-helper {
    display: flex;
    align-items: center;
    margin-top: 90px;

    &__picture {
      display: block;
      width: 100%;
      max-width: 550px;
      margin-right: 80px;
      border-radius: 24px;
    }

    &__content {
      max-width: 410px;

      &-title {
        font-weight: 700;
        font-size: 28px;
        line-height: 125%;
        color: #212529;
      }

      &-text {
        margin: 8px 0 20px;
        font-weight: 600;
        font-size: 17px;
        line-height: 140%;
        color: #0057b8;
      }

      &-desc {
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;
        margin-bottom: 20px;
      }
    }
  }

  .box-legal {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.07);
    box-shadow: 0px 8px 68px rgba(136, 136, 136, 0.11);
    border-radius: 24px;
    overflow: hidden;
    margin-top: 90px;

    &__picture {
      display: block;
      width: 100%;
      margin-bottom: 20px;
    }

    &__title {
      text-align: center;
      font-weight: 700;
      font-size: 28px;
      line-height: 120%;
      letter-spacing: 0.01em;
      color: #212529;
      margin-bottom: 26px;
    }

    &__wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: flex-start;
      width: 100%;
      padding: 0 80px;
    }

    &__item {
      display: flex;
      width: 100%;
      max-width: calc(50% - 17px);
      align-items: flex-start;
      margin-bottom: 25px;

      &-icon {
        display: block;
        width: 100%;
        max-width: 30px;
        margin-right: 20px;
      }

      &-desc {
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;
        color: #111111;
      }
    }

    .btn {
      background: #212529;
      margin: 0 auto 42px;

      &:hover {
        color: #111;
        background: #ffd700;
      }
    }
  }
}

@media only screen and (max-width: 1568px) {
  .content-about {
    &__promo {
      width: 90%;
    }

    .box-map {
      &__picture {
        transform: translateX(0);
            max-width: 500px;
      }
    }
  }
}

@media only screen and (max-width: 1268px) {
  .content-about {
    &__promo {
      width: 90%;
    }

    .box-can {
      padding: 40px 50px;
    }
  }
}

@media only screen and (max-width: 992px) {
  .content-about {
    &__inner {
      // transform: translateY(-200px);
      // margin-top:;
      margin: -200px 20px 0;
    }

    &__title {
      font-size: 32px;
    }

    &__desc {
      max-width: 95%;
      font-size: 14px;
      margin-bottom: 24px;
    }

    .box-can {
      padding: 24px 24px;

      &__title {
        font-size: 22px;
        margin-bottom: 8px;
      }

      &__desc {
        margin-bottom: 22px;
      }

      .box-line__content {
        max-width: 70%;

        &-title {
          font-size: 20px;
          margin-bottom: 6px;
        }

        &-desc {
          span {
            font-size: 16px;
          }
        }
      }

      .box-order__item {
        max-width: 184px;
        padding: 8px 14px;
        border-radius: 16px;

        &-title {
          font-size: 16px;
          margin-bottom: 10px;
        }
      }
    }

    .box-map {
      flex-direction: column;
      margin: 60px 0;

      &__picture {
        transform: translateX(0);
        margin-bottom: 24px;
      }

      &__content {
        &-title {
          font-size: 22px;
          margin-bottom: 22px;
          text-align: center;
        }
      }
    }

    .box-priority {
      .priority-today {
        &__wrapper {
          margin-top: 20px;
        }

        &__title {
          font-size: 21px;
        }

        &__box {
          display: flex;
          width: 100%;
          max-width: 90%;
        }
      }
    }

    .box-principle {
      margin-top: 60px;

      &__content {
        &-title {
          font-size: 22px;
        }

        &-text {
          font-size: 14px;
        }
      }
    }

    .box-helper {
      margin-top: 60px;
      align-items: stretch;

      &__picture {
        object-fit: cover;
        max-width: 242px;
        margin-right: 30px;
        border-radius: 11px;
      }

      &__content {
        &-title {
          font-size: 22px;
        }

        &-text {
          margin: 8px 0 12px;
          font-size: 16px;
        }

        &-desc {
          margin-bottom: 18px;
        }
      }
    }

    .box-legal {
      margin-top: 60px;

      &__item {
        max-width: 100%;
      }

      &__title {
        font-size: 22px;
        margin-bottom: 24px;
      }

      &__wrapper {
        padding: 0 24px;
      }
    }
  }
}

@media only screen and (max-width: 568px) {
  .content-about {
    padding: 10px 0 64px;

    &__promo {
      width: 95%;
      height: 408px;
      background: #000;
      border-radius: 12px;

      &-picture {
        border-radius: 16px;
      }
    }

    &__inner {
      // transform: translateY(-240px);
      margin: -240px 0 0px;
    }

    &__title {
      font-size: 22px;
    }

    &__desc {
      max-width: 95%;
      font-size: 14px;
      margin-bottom: 24px;
    }

    .box-can {
      border-radius: 12px;
      padding: 12px;

      &__title {
        font-size: 21px;
      }

      &__desc {
        margin-bottom: 18px;
      }

      .box-order {
        margin: 16px 0;
        flex-direction: column;

        &__item {
          max-width: 90%;
          padding: 10px 14px;
          border-radius: 16px;
          margin: 5px auto;

          &-btn {
            margin: 0 auto;
          }
        }
      }

      .box-line {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;

        &__content {
          max-width: 100%;

          &-title {
            font-size: 19px;
            margin-bottom: 4px;
          }
        }

        &__pictire {
          width: 40px;
          height: 40px;
          border-radius: 12px;
          margin-right: 0;
          margin-bottom: 12px;

          &-img {
            max-width: 23px;
          }
        }
      }
    }

    .box-map {
      margin: 40px 0;

      &__content {
        &-title {
          margin-bottom: 16px;
        }

        &-desc {
          font-weight: 500;
          font-size: 14px;
          line-height: 150%;
          margin-bottom: 12px;
          text-align: center;
        }

        &-proverb {
          border-radius: 12px;
        }
      }
    }

    .box-priority {
      padding: 12px;
      border-radius: 12px;

      hr {
        margin: 26px 0;
      }

      .priority-today {
        &__wrapper {
          margin-top: 16px;
        }

        &__title {
          font-size: 19px;
        }

        &__picture {
          width: 40px;
          height: 40px;
          margin-right: 14px;
          border-radius: 10px;

          &-icon {
            max-width: 24px;
          }
        }

        &__content {
          &-title {
            font-size: 16px;
            margin-bottom: 4px;
          }
        }
      }
    }

    .box-principle {
      margin-top: 40px;
      border-radius: 12px;

      &__picture {
        display: block;
        width: 100%;
        margin-bottom: 16px;
      }

      &__content {
        text-align: center;
        padding: 0 12px 16px;

        &-title {
          font-size: 21px;
          margin-bottom: 5px;
        }

        &-text {
          margin-bottom: 12px;
        }
      }
    }

    .box-helper {
      margin-top: 40px;
      align-items: center;
      flex-direction: column;

      &__picture {
        max-width: 100%;
        margin-right: 0;
        border-radius: 12px;
        margin-bottom: 20px;
      }

      &__content {
        text-align: center;
      }

      .btn {
        margin: 0 auto;
      }
    }

    .box-legal {
      margin-top: 40px;
      border-radius: 12px;

      &__picture {
        margin-bottom: 12px;
      }

      &__title {
        font-size: 21px;
        margin-bottom: 15px;
      }

      &__item {
        margin-bottom: 14px;
      }

      .btn {
        margin: 0 auto 16px;
      }
    }
  }
}
