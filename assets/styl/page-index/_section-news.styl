.news {
  margin-bottom: 104px;

  &__inner {
    display: flex;
    justify-content: space-between;
  }

  .news-project__nav {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 24px;

    .news-project__nav-btn {
      border: 4px solid #0057b8;
      border-radius: 49px;
      padding: 18px 20px 17px;
      width: 100%;
      text-align: center;
      font-weight: 500;
      font-size: 17px;
      line-height: 150%;
      cursor: pointer;
    }

    .news-project__nav-btn--active {
      background: #0057b8;
      color: #fff;
    }
  }

  .news-project {
    width: 100%;
  }

  .news-project__content {
    display: flex;
    flex-wrap: wrap;
    gap: 28px;
    justify-content: space-between;
  }

  .news-project__link {
    display: block;
    background: #fff;
    border-radius: 30px;
    padding: 16px;
    width: calc(50% - 14px);

    &:hover {
      .box__text-title {
        color: #0057b8;
      }

      .box__picture-img {
        transform: scale(1.1);
      }
    }
  }

  .box {
    display: flex;
    justify-content: space-between;
    align-items: stretch;

    .box__content {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      width: 100%;
    }

    .box__picture {
      max-width: 168px;
      height: 202px;
      width: 100%;
      margin-right: 16px;
      overflow: hidden;
      border-radius: 20px;
    }

    .box__picture-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: all 0.5s;
    }

    .box__content-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 4px;
    }

    .box__info-target {
      background: #ced4da63;
      border-radius: 10px;
      padding: 12px;
      display: flex;
      align-items: center;
      justify-content: space-between;

      img {
        max-width: 20px;
        width: 100%;
        margin-right: 4px;
        display: block;
      }

      span {
        font-weight: 400;
        font-size: 12px;
        line-height: 150%;
      }
    }

    .box__info-date {
      display: flex;
      justify-content: space-between;
      align-items: center;

      img {
        max-width: 18px;
        width: 100%;
        margin-right: 4px;
        display: block;
      }

      span {
        font-weight: 400;
        font-size: 13px;
        line-height: 150%;
      }
    }

    .box__content-text {
      margin-top: 15px;
    }

    .box__text-title {
      font-weight: 600;
      font-size: 23px;
      margin-bottom: 4px;
      line-height: 125%;
      transition: all 0.5s;
    }

    .box__text-desc {
      font-weight: 400;
      color: #343a40;
      font-size: 15px;
      line-height: 150%;
    }

    .box__content-objective {
      display: flex;
      justify-content: space-between;
    }

    .box__objective-end,
    .box__objective-now {
      span {
        font-weight: 600;
        font-size: 20px;
        line-height: 150%;
        color: #212529;
      }

      font-weight: 400;
      font-size: 13px;
      line-height: 150%;
      color: #343a40;
    }
  }
}

@media only screen and (max-width: 1500px) {
  .news {
    .box {
      .box__info-target {
        padding: 8px;
      }

      .box__objective-end span,
      .box__objective-now span {
        font-size: 18px;
      }
    }
  }
}

@media only screen and (max-width: 1300px) {
  .news {
    &__inner {
      flex-direction: column;
    }

    .news-project {
      width: calc(100%);
    }
  }
}

@media only screen and (max-width: 992px) {
  .news {
    margin-bottom: 68px;

    .news-project__link {
      width: 100%;
    }
  }
}

@media only screen and (max-width: 568px) {
  .news {
    margin-bottom: 30px;

    .box {
          flex-direction: column;
      .box__picture {
        max-width: 100%;
        argin-right: 0;
        margin-bottom: 20px;
      }

      .box__content-info {
        align-items: flex-start;
        flex-direction: column;
        margin-bottom: 10px;
      }

      .box__info-target {
        margin-bottom: 10px;
      }

      .box__objective-end span,
      .box__objective-now span {
        font-size: 14px;
      }

      .box__text-desc {
        font-size: 14px;
      }

      .box__text-title {
        font-size: 20px;
      }
    }

    .news-project__nav {
      flex-direction: column;
      gap: 10px;

      .news-project__nav-btn {
        padding: 15px 20px 15px;
        max-width: calc(100%);
        font-size: 14px;
      }
    }
  }
}
