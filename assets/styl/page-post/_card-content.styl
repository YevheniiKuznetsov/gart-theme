.post-card {
  margin-top 50px
}

.content {
  padding: 48px 0 64px;

  &__inner {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .main-content {
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 24px;
    padding: 40px;
    max-width: 100%;
    width: 100%;

    .tabs {
      display: flex;
      max-width: 680px;
      margin-bottom: 24px;

      .tabs__item {
        width: 50%;
        text-align: center;
        padding-bottom: 20px;
        cursor: pointer;
        border-bottom: 4px solid #ced4da;
        color: #adb5bd;

        span {
          position: relative;
          display: block;
          width: fit-content;
          margin: 0 auto;
        }

        .tabs__item-icon {
          position: absolute;
          max-width: 28px;
          width: 100%;
          right: -30px;
          top: 50%;
          transform: translateY(-50%);
        }
      }

      .tabs__item--active {
        color: #0057b8;
        border-bottom: 8px solid #0057b8;
        transform: translateY(2px);

        .tabs__item-icon {
          path.tabs__item-ico--fill {
            fill: #0057b8;
          }

          path.tabs__item-ico--stroke {
            stroke: #0057b8;
          }
        }
      }
    }

    .content-tabs {
      .content-tabs__text {
        max-width: 1000px;
        font-weight: 500;
        font-size: 14px;
        line-height: 150%;

        p + p {
          margin-top: 20px;
        }

        h3,
        h2 {
          font-weight: 700;
          font-size: 28px;
          line-height: 125%;
          margin: 20px 0;
        }

        h4 {
          font-weight: 600;
          font-size: 17px;
          line-height: 140%;
          margin-bottom: 16px;
        }

        img {
          display: block;
          border-radius: 32px;
          width: auto;
          margin: 42px 0;
        }

        .box-done {
          position: relative;
          padding-left: 32px;
          max-width: 800px;

          &::after {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 18px;
            height: 18px;
            background-image: url("../img/icons/icon-done.svg");
            background-size: contain;
            background-repeat: no-repeat;
          }
        }

        .box-done + .box-done {
          margin-top: 32px;
        }
      }
    }
  }

  .content-tabs__report {
    display: none;
  }

  .content-tabs__report-title {
    font-weight: 700;
    font-size: 28px;
    line-height: 125%;
    display: flex;

    .content-tabs__report-title_button {
      font-weight: 500;
      font-size: 14px;
      margin-left: 20px;
      line-height: 150%;
      color: #212529;
      position: relative;
      padding-left: 30px;
      cursor pointer
    }

    .content-tabs__report-icon {
      width: 20px;
      height: 20px;
      display: block;
      position: absolute;
      left: 5px;
    }
  }

  .box-report {
    margin: 30px 0 40px;
    background: #f1f3f5;
    border-radius: 28px;
    padding: 30px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;

    .box-report__item {
      text-align: center;
    }

    .box-report__item-icon {
      max-width: 70px;
      background: #ffffff;
      border-radius: 14px;
      margin: 0 auto;
      width: 100%;
      height: 70px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 16px;
    }

    .box-report__item-goal {
      span {
        font-weight: 600;
        font-size: 23px;
        line-height: 100%;
      }

      font-weight: 400;
      font-size: 15px;
      line-height: 100%;
      margin-bottom: 4px;
    }

    .box-report__item-svg {
      position: relative;

      .box {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -60%);
        text-align: center;

        .box-goal__count {
          font-weight: 600;
          font-size: 18px;
          line-height: 100%;
          margin-bottom: 4px;
        }

        .box-goal__text {
          font-weight: 400;
          font-size: 12px;
          line-height: 100%;
        }
      }
    }

    .progress-bar {
      width: auto;
      height: 170px;
      border-radius: 50%;
      transform: rotate(-90deg) translateX(32px);
      margin-bottom: -60px;

      .progress-bar__defolt {
        fill: none;
        stroke: #fff;
        stroke-width: 5;
      }

      .progress-bar__active {
        fill: none;
        stroke: #0057b8;
        stroke-width: 6;
      }
    }

    .box-report__item-img {
      width: 36px;
      display: block;
    }

    .box-report__item-subtitle {
      font-weight: 700;
      font-size: 28px;
      line-height: 100%;
      color: #212529;
    }

    .box-report__item-text {
      font-weight: 400;
      font-size: 15px;
      line-height: 150%;
      color: #212529;
      margin-top: 4px;
    }
  }
}

.table-report {
  .table-report__head {
    display: flex;
    justify-content: space-between;
    padding: 20px;
    background: #2b2e28;
    color: #fff;
    border-bottom: 3px solid #ffffff;
    border-radius: 24px 24px 0px 0px;

    .table-report__head-title {
      font-weight: 600;
      font-size: 20px;
      line-height: 100%;
    }

    .table-report__head-summ {
      font-weight: 600;
      font-size: 23px;
      line-height: 100%;
      color: #ffd700;
    }
  }

  .table-report__header {
    display: flex;
    background: #e9ecef;
    justify-content: space-between;

    .table-report__item {
      font-weight: 600;
      font-size: 17px;
      line-height: 100%;
    }
  }

  .table-report__line {
    display: flex;
    background: #f8f9fa;
    justify-content: space-between;

    .table-report__item-date {
      font-weight: 500;
      font-size: 14px;
      line-height: 100%;
      color: #343a40;
    }

    .table-report__item-name {
      font-weight: 700;
      font-size: 18px;
      line-height: 100%;
      color: #fa5252;
    }

    .table-report__item-count {
      font-weight: 500;
      font-size: 14px;
      line-height: 100%;
      color: #212529;

      .table-count {
        background: #fff;
        padding: 5px 15px;
        border-radius: 5px;
      }
    }

    .table-report__item-price {
      font-weight: 700;
      font-size: 18px;
      line-height: 150%;
    }

    .table-report__item-status {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;

      .status__not-done {
        background: #ffe3e3;
        border-radius: 10px;
        padding: 5px 40px;
      }

      .status__done {
        background: #d4ffdf;
        border-radius: 10px;
        padding: 5px 40px;
      }
    }
  }

  .table-report__item {
    padding: 16px 5px 18px;
    text-align: center;
    border-bottom: 3px solid #fff;
    display: flex;
    align-items: center;
    justify-content: center;

    &:nth-child(1) {
      width: 15%;
    }

    &:nth-child(2) {
      width: 25%;
    }

    &:nth-child(3) {
      width: 15%;
    }

    &:nth-child(4) {
      width: 25%;
    }

    &:nth-child(5) {
      width: 20%;
    }
  }

  .table-report__item + .table-report__item {
    border-left: 3px solid #fff;
  }

  .table-report__footer {
    display: flex;
    justify-content: space-between;
    padding: 20px;
    background: #e9ecef;
    border-bottom: 3px solid #ffffff;
    border-radius: 0px 0px 24px 24px;

    .table-report__footer-title {
      font-weight: 600;
      font-size: 20px;
      line-height: 140%;

      sup {
        font-weight: 400;
        font-size: 14px;
        line-height: 150%;
        color: #495057;
      }
    }

    .table-report__footer-summ {
      font-weight: 600;
      font-size: 23px;
      line-height: 150%;
    }
  }
}

@media only screen and (max-width: 992px) {
  .post-card {
    margin-top: 0;

    .card {
      .card__wrapper {
        flex-direction: column;
      }

      .card__picture {
        margin: 0 0 24px;
        max-width: 500px;
      }
    }
  }

  .content {
    padding: 48px 0 64px;

    &__inner {
      flex-direction: column;
    }

    .box-report {
      flex-wrap: wrap;

      .box-report__item {
        width: 50%;
        margin: 30px 0;
      }

      .box-report__item-goal {
        span {
          display: block;
          margin-bottom: 4px;
        }
      }

      .box-report__item-goal + .box-report__item-goal {
        margin-top: 15px;
      }
    }

    .main-content {
      max-width: 100%;
      margin-bottom: 48px;
    }

    .last-news,
    .partners-box {
      max-width: 512px;
      width: 100%;
    }

    .document-box {
      .document-box__wrapper {
        justify-content: flex-start;
      }

      .btn {
        margin: 24px 0;
      }
    }
  }

  .card {
    .card__content {
      max-width: 100%;
    }
  }
}

@media only screen and (max-width: 768px) {
  .table-report {
    .table-report__head {
      padding: 10px 15px;
      border-radius: 14px 14px 0px 0px;

      .table-report__head-title {
        font-size: 12px;
      }

      .table-report__head-summ {
        font-size: 14px;
      }
    }

    .table-report__footer {
      padding: 10px 15px;
      border-radius: 0px 0px 14px 14px;

      .table-report__footer-title {
        font-size: 12px;

        sup {
          font-size: 10px;
        }
      }

      .table-report__footer-summ {
        font-size: 14px;
      }
    }

    .table-report__header {
      .table-report__item {
        font-size: 12px;
      }
    }

    .table-report__item {
      padding: 10px 5px 10px;
    }

    .table-report__line {
      .table-report__item-date {
        font-size: 10px;
      }

      .table-report__item-name {
        font-size: 12px;
      }

      .table-report__item-count {
        font-size: 12px;
      }

      .table-report__item-price {
        font-size: 12px;
      }

      .table-report__item-status {
        font-size: 10px;
      }
    }
  }
}

@media only screen and (max-width: 568px) {
  .post-card {
    .card {
      padding: 24px 24px 40px;

      .card__content {
        .card__content-title {
          font-size: 21px;
        }

        .card__counts {
          flex-direction: column;
          margin: 16px 0;
        }

        .card__counts-peoples {
          font-size: 14px;

          span {
            font-size: 19px;
          }
        }

        .card__counts-peoples + .card__counts-peoples {
          margin-left: 0;
          margin-top: 8px;
        }
      }

      .objective {
        align-items: flex-start;
        flex-direction: column;
      }

      .objective__now-point {
        font-weight: 600;
        font-size: 19px;
      }

      .objective__end-point {
        font-size: 16px;
      }

      .card__content-data {
        font-size: 14px;
      }

      .progress-bar {
        width: 100%;
        margin-bottom: 24px;
      }

      .btn {
        width: 100%;
        max-width: 100%;
        padding: 24px;
        font-size: 16px;
      }

      .payments {
        justify-content: space-between;
      }

      .share-box {
        .share-box__title {
          font-size: 14px;
        }
      }
    }
  }

  .content {
    padding: 32px 0 24px;

    .main-content {
      padding: 24px;

      .content-tabs {
        .content-tabs__text {
          h3 {
            font-size: 19px;
          }
        }
      }
    }

    .last-news .last-news__title,
    .last-news .information-fund__title,
    .information-fund .information-fund__title,
    .contacts-fund .contacts-fund__title {
      font-weight: 600;
      font-size: 17px;
      line-height: 125%;
    }

    .last-news {
      .news-box {
        flex-direction: column;

        .news-box__img {
          margin-right: 0;
          margin-bottom: 16px;
        }

        .news-box__content {
          .news-box__content-desc {
            font-size: 16px;
            margin-bottom: 16px;
          }
        }
      }
    }

    .contacts-fund {
      margin: 24px 0;
    }

    .partners-box {
      .partners-box__item {
        .partners-box__item-subtitle {
          font-size: 17px;
          margin-bottom: 8px;
        }

        .partners-box__item-desc {
          font-size: 13px;
        }
      }
    }

    .box-report {
      padding: 20px;

      .box-report__item {
        width: 100%;
      }
    }

    .box-table__wrapper {
      display: none;
    }

    .content-tabs__report-title {
      font-size: 21px;
      flex-direction: column;

      a {
        margin-left: 0;
        margin-top: 10px;
      }
    }
  }

  .table-report {
    .table-report__head {
      padding: 10px 15px;
      border-radius: 14px 14px 0px 0px;

      .table-report__head-title {
        font-size: 10px;
      }

      .table-report__head-summ {
        font-size: 12px;
      }
    }

    .table-report__footer {
      padding: 10px 15px;
      border-radius: 0px 0px 14px 14px;

      .table-report__footer-title {
        font-size: 10px;

        sup {
          font-size: 9px;
        }
      }

      .table-report__footer-summ {
        font-size: 12px;
      }
    }

    .table-report__header {
      .table-report__item {
        font-size: 8px;
      }
    }

    .table-report__item {
      padding: 10px 5px 10px;
    }

    .table-report__line {
      .table-report__item-date {
        font-size: 9px;
      }

      .table-report__item-name {
        font-size: 10px;
      }

      .table-report__item-count {
        font-size: 10px;
      }

      .table-report__item-price {
        font-size: 10px;
      }

      .table-report__item-status {
        font-size: 9px;

        .status__not-done {
          padding: 5px 10px;
        }
      }
    }
  }

  .content {
    .main-content {
      .content-tabs {
        .content-tabs__text {
          img {
            border-radius: 22px;
            margin: 22px 0;
          }

          h4 {
            font-size: 16px;
            margin-bottom: 5px;
          }
        }
      }
    }
  }
}
