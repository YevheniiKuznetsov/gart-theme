.popub {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 150;
  top: 0;
  left: 0;
  animation: fadeEffect 0.5s;
  display: none;

  &__inner {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .popub__close {
    background: #212529;
    width: 25px;
    height: 25px;
    padding: 0;
    border: none;
    border-radius: 50%;
    position: absolute;
    cursor: pointer;
    right: 28px;
    top: 28px;
    transition: all 0.5s;

    &::after {
      content: "";
      width: 16px;
      height: 2px;
      background: #fff;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%) rotate(40deg);
    }

    &::before {
      content: "";
      width: 16px;
      height: 2px;
      background: #fff;
      position: absolute;
      right: 50%;
      top: 50%;
      transform: translate(50%, -50%) rotate(-40deg);
    }

    &:hover {
      background: #212529c0;
    }
  }

  .popub__content {
    max-width: 925px;
    padding: 40px 75px 40px 85px;
    width: 100%;
    background: #ffffff;
    box-shadow: 0px 8px 48px rgba(153, 153, 153, 0.11);
    border-radius: 38px;
    position: relative;
    margin: 0 20px;
    overflow: hidden;
  }

  .popub-form {
    height: 600px;
    overflow-y: scroll;
    overflow-x: hidden;
    padding-right: 20px;

    .box-feedback__form-title {
      text-align: center;
      font-weight: 800;
      font-size: 38px;
      line-height: 120%;
      letter-spacing: 0.01em;
      margin-bottom: 24px;
    }

    .box-feedback__form-text {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;
      text-align: center;
      margin-bottom: 40px;
    }

    .popub-form__form-item {
      margin-bottom: 42px;
    }

    .form {
      .form__btn {
        margin: 20px auto 0;
      }

      .form__textarea {
        max-width: 757px;
      }

      .form__label {
        span {
          font-style: italic;
          font-weight: 400;
          margin-top: 4px;
          font-size: 16px;
          line-height: 150%;
          display: block;
          color: #212529;
        }
      }
    }
  }
}

// Відповідь на запитання
.content-questio {
  height: 600px;
  overflow-y: scroll;
  padding-right: 10px;

  .content-questio__title {
    font-weight: 700;
    font-size: 28px;
    line-height: 125%;
    color: #212529;
    margin-bottom: 24px;
  }

  .content-questio__subtitle {
    font-weight: 600;
    font-size: 17px;
    line-height: 140%;
    padding-left: 20px;
    color: #212529;
    margin-bottom: 14px;
    position: relative;

    &::after {
      content: "";
      position: absolute;
      left: 8px;
      top: 50%;
      transform: translateY(-50%);
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background: #000;
    }
  }

  .content-questio__text {
    font-weight: 500;
    font-size: 14px;
    line-height: 150%;
    margin-bottom: 16px;

    a {
      font-weight: 600;
      font-size: 17px;
      line-height: 140%;
      color: #0057b8;
      position: relative;

      &::after {
        content: "";
        position: absolute;
        bottom: -2px;
        width: 100%;
        height: 2px;
        background: #0057b8;
        left: 0;
      }
    }
  }

  .content-questio__list {
    padding-left: 40px;
    margin-bottom: 16px;

    .content-questio__list-item {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;
      margin-bottom: 8px;
      list-style: disc;

      a {
        font-weight: 600;
        font-size: 17px;
        line-height: 140%;
        color: #0057b8;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          bottom: -2px;
          width: 100%;
          height: 2px;
          background: #0057b8;
          left: 0;
        }
      }
    }
  }
}

@media only screen and (max-width: 992px) {
  .popub {
    .popub__content {
      padding: 30px 15px 20px 20px;
    }

    .popub__close {
      right: 20px;
      top: 20px;
    }
  }
}

@media only screen and (max-width: 992px) {
  .popub {
    .popub-form {
      height: 400px;
      overflow: scroll;
      padding-right: 10px;

      .form__wrapper {
        flex-direction: column;

        .form__item {
          width: 100%;
        }
      }

      .box-feedback__form-title {
        font-size: 28px;
        margin-bottom: 14px;
      }

      .box-feedback__form-text {
        margin-bottom: 20px;
      }

      .popub-form__form-item {
        margin-bottom: 22px;
      }

      .form {
        .form__label {
          span {
            font-size: 14px;
          }
        }
      }
    }
  }
}
