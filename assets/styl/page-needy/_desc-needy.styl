.news-card {
  margin: 24px 0 64px;

  .content {
    padding: 32px 120px;
    background: #ffffff;
    box-shadow: 0px 7px 67px rgba(136, 136, 136, 0.11);
    border-radius: 35px;
  }

  .box-content {
    margin-bottom: 60px;
  }

  .box-content__picture {
    position: relative;
    overflow: hidden;
    border: 1px solid #f1f3f5;
    border-radius: 26px;
    height: 560px;
    margin-bottom: 32px;
  }

  .box-content__picture-img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .box-content__picture-date {
    position: absolute;
    top: 16px;
    left: 16px;
    background: #212529;
    border-radius: 62px;
    color: #fff;
    padding: 6px 9px 6px 40px;
    font-weight: 500;
    font-size: 14px;
    line-height: 150%;

    &::after {
      content: "";
      position: absolute;
      left: 9px;
      top: 50%;
      width: 24px;
      height: 24px;
      background-image: url("../img/icons/date-card.svg");
      background-size: contain;
      transform: translateY(-50%);
    }
  }

  .box-content__description {
    h2 {
      text-align: center;
      font-weight: 700;
      font-size: 28px;
      line-height: 125%;
      margin-bottom: 22px;
    }

    p {
      font-weight: 500;
      font-size: 14px;
      line-height: 150%;

      span {
        display: block;
        font-weight: 600;
        font-size: 17px;
        line-height: 140%;
        color: #0057b8;
      }
    }

    img {
      border: 1px solid #f1f3f5;
      border-radius: 26px;
      display: inline;
      width: auto;
      margin: 22px 0 30px;
    }
  }

  hr {
    border-color: #ced4da17;
    margin: 32px 0;
  }

  .box-share {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .share-box__title {
    font-weight: 500;
    font-size: 14px;
    line-height: 150%;
    color: #212529;
    margin-bottom: 10px;
  }

  .share-box__wrapper {
    display: flex;
  }

  .share-box__item {
    display: block;
  }

  .share-box__item + .share-box__item {
    margin-left: 16px;
  }

  .box-last__wrapper {
    display: flex;
  }

  .box-last__item {
    display: flex;
    align-items: center;
    width: 320px;

    &:hover {
      .box-last__content-title {
        color: #0057b8;
      }
    }
  }

  .box-last {
    overflow-x: scroll;
    padding-bottom: 32px;
  }

  .box-last__wrapper {
    width: fit-content;
    overflow: hidden;
  }

  .box-last__item + .box-last__item {
    margin-left: 20px;
  }

  .box-last__picture {
    display: block;
    width: 100%;
    height 120px;
        object-fit: cover;
    max-width: 120px;
    border: 1px solid #f1f3f5;
    border-radius: 10px;
    margin-right: 18px;
  }

  .box-last__content-date {
    font-weight: 400;
    font-size: 13px;
    line-height: 150%;
    color: #ced4da;
  }

  .box-last__content-title {
    font-weight: 600;
    font-size: 17px;
    line-height: 140%;
    transition: all 0.5s;
    margin: 4px 0 8px;
  }

  .box-last__content-link {
    position: relative;
    width: fit-content;
    font-weight: 500;
    font-size: 14px;
    line-height: 150%;
    color: #0057b8;
    z-index: 5;

    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 1px;
      background-color: #0057b8;
      transition: all 0.5s;
      z-index: 1;
    }
  }
}

@media only screen and (max-width: 992px) {
  .news-card {
    .content {
      padding: 24px;
      border-radius: 24px;
    }

    .box-content {
      &__picture {
        border-radius: 16px;
        height: 260px;
        margin-bottom: 24px;
      }

      &__description {
        h2 {
          font-size: 22px;
        }

        p {
          span {
            font-size: 16px;
          }
        }

        img {
          border-radius: 16px;
        }
      }
    }
  }
}

@media only screen and (max-width: 568px) {
  .news-card {
    .content {
      padding: 12px;
      border-radius: 18px;
    }

    .box-content {
      margin-bottom: 30px;

      &__picture {
        border-radius: 18px;
    height: 388px;
        margin-bottom: 14px;
      }

      &__description {
        h2 {
          font-size: 21px;
          margin-bottom: 12px;
        }

        p {
          span {
            font-size: 16px;
          }
        }

        img {
          border-radius: 18px;
          margin: 20px 0 14px;
        }
      }
    }

    .box-share {
      align-items: flex-start;
    }

    .share-box {
      &__wrapper {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        max-width: 70%;
        gap: 0 15px;
      }
    }

    .share-box__item + .share-box__item {
      margin-left: 0px;
    }
  }
}
