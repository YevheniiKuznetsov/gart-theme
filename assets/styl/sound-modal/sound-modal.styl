.sound-modal
  position fixed 
  top 0
  left 0
  z-index 100
  width 100vw 
  height 100vh 
  padding 20px
  background-color rgba(0, 0, 0, 0.4)

  img {
    display block
    // position absolute
    // top 20px 
    // left 50% 
    // transform translate(-50%, 0)
    // max-width 100%
    // height calc(100% - 40px)
    width 100%
    height 100% 
    object-fit contain
  }

  .popub__close {
    background: #212529;
    width: 25px;
    height: 25px;
    padding: 0;
    border: none;
    border-radius: 50%;
    position: absolute;
    cursor: pointer;
    right: 28px;
    top: 28px;
    transition: all 0.5s;

    &::after {
      content: "";
      width: 16px;
      height: 2px;
      background: #fff;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%) rotate(40deg);
    }

    &::before {
      content: "";
      width: 16px;
      height: 2px;
      background: #fff;
      position: absolute;
      right: 50%;
      top: 50%;
      transform: translate(50%, -50%) rotate(-40deg);
    }

    &:hover {
      background: #212529c0;
    }
  }

